funcao inicio() 
	{
		inteiro matricula[8], nr_matricula=0
    cadeia nome_aluno[8], sobre_aluno[8], nomes, sobrenomes
		
		// preenche o vetor
		para (inteiro posicao = 0; posicao < 8; posicao++)
		{
      escreva("Digite a matricula do aluno:  ", posicao, "\n")
      leia(nr_matricula)
			matricula[posicao] = nr_matricula // Sorteia um número e atribui à posição do vetor
      escreva("\n Digite o nome do aluno:")
      leia(nomes)
      nome_aluno[posicao]=nomes
      escreva("\n Digite o sobrenome do aluno:")
      leia(sobrenomes)
      sobrenome_aluno[posicao]=sobrenomes
		}

		// Exibe o vetor na ordem original
		escreva ("Vetor na ordem original:\n")
		
		para(inteiro posicao = 0; posicao < 8; posicao++)
		{
			escreva (matricula[posicao], " ", "\n")
		}
		
	}
}

